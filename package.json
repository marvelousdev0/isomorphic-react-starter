{
  "name": "isomorphic-webapp-starter",
  "version": "0.1.0",
  "description": "Isomorphic web application starter with hot module replacement (HMR) for rapid development.",
  "scripts": {
    "start": "npm run start-server-prod",
    "postinstall": "npm run build",
    "build": "npm run build-client && npm run build-server",
    "build-client": "npm run clean-dist-client && webpack --config configs/webpack/client.prod --define process.env.NODE_ENV='production'",
    "build-server": "npm run clean-dist-server && webpack --config configs/webpack/server.prod --define process.env.NODE_ENV='production'",
    "clean-dist": "npm run clean-dist-client && npm run clean-dist-server",
    "clean-dist-client": "rm -f -r -d dist/public",
    "clean-dist-server": "rm -f dist/server.*",
    "start-dev": "concurrently \"npm run start-client-dev\" \"npm run start-server-dev\"",
    "start-prod": "npm run build && npm run start-server-prod",
    "start-client-dev": "webpack-dev-server --config configs/webpack/app.dev",
    "start-server-dev": "nodemon -q --watch src/server src/server/index.js --exec babel-node --presets env",
    "start-server-prod": "node dist/server.min.js",
    "test": "jest --coverage --config=configs/jest.json",
    "test-watch": "jest --coverage --watch --config=configs/jest.json",
    "lint": "prettier --write --single-quote --trailing-comma all \"{src,tests/client,tests/server}/**/*.{js,jsx,scss}\""
  },
  "author": "Viktor Persson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikpe/isomorphic-webapp-starter.git"
  },
  "bugs": {
    "url": "https://github.com/vikpe/isomorphic-webapp-starter/issues"
  },
  "homepage": "https://github.com/vikpe/isomorphic-webapp-starter#readme",
  "dependencies": {
    "axios": "^0.17.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "compression": "^1.7.1",
    "concurrently": "^3.5.0",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.4.2",
    "jshint": "^2.9.5",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.2",
    "node-sass": "^4.6.1",
    "nodemon": "^1.12.1",
    "postcss-loader": "^2.0.8",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "prettier": "^1.9.1"
  },
  "postcss": {}
}
